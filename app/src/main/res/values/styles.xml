<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@color/colorPrimaryDark</item>
    </style>


    <!--解决启动白屏问题-->
    <style name="AppTransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- 登录EditText主题颜色-->
    <style name="LoginEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>


    <style name="SupperTextStyleItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height_dp_52</item>
        <item name="cn.cdjzxy.monitoringassistant:sLeftTextSize">@dimen/text_size_14</item>
        <item name="cn.cdjzxy.monitoringassistant:sDividerLineColor">@color/dc1</item>
        <item name="cn.cdjzxy.monitoringassistant:sDividerLineType">bottom</item>
        <item name="cn.cdjzxy.monitoringassistant:sLeftTextColor">@color/black</item>
        <item name="cn.cdjzxy.monitoringassistant:sRightIconRes">@mipmap/ic_arrow_more</item>
        <item name="cn.cdjzxy.monitoringassistant:sRightTextColor">@color/black</item>
        <item name="cn.cdjzxy.monitoringassistant:sRightTextSize">@dimen/text_size_14</item>
    </style>

    <!-- 基础信息ItemStyle-->
    <style name="BasicInfoItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height_dp_52</item>
        <item name="android:layout_marginLeft">@dimen/dp_18</item>
        <item name="android:layout_marginRight">@dimen/dp_18</item>
    </style>

    <style name="RightViewItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:gravity">center|right</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="RightViewItemHintStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:gravity">center|right</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColorHint">@color/text_color_999999</item>
        <item name="android:drawablePadding">@dimen/dp_8</item>
        <item name="android:hint">请选择</item>
        <item name="android:drawableRight">@mipmap/ic_has_next</item>
    </style>

    <!-- 基础信息ItemNameStyle-->
    <style name="BasicInfoItemNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:drawablePadding">@dimen/dp_12</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <!-- 下一级信息ItemNameStyle-->
    <style name="BasicInfoNextItemNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
    </style>

    <!-- 基础信息ItemEditTextStyle-->
    <style name="BasicInfoItemEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@null</item>
        <item name="android:hint">请填写</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:textColorHint">@color/text_color_999999</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:gravity">center|right</item>
    </style>

    <style name="BasicInfoItemEditTextStyle_gai">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@null</item>
        <item name="android:hint">请填写</item>
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:textColorHint">@color/text_color_999999</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:gravity">end|center</item>
    </style>

    <!-- 基础信息ItemTextViewStyle-->
    <style name="BasicInfoItemTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawablePadding">@dimen/dp_8</item>
        <item name="android:drawableRight">@mipmap/ic_has_next</item>
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:textColorHint">@color/text_color_999999</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:gravity">right</item>
        <item name="android:hint">请选择</item>
    </style>

    <!-- 基础信息ItemTextViewStyle-->
    <style name="BasicInfoItemTextViewStyle_gai">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">end|center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawablePadding">@dimen/dp_8</item>
        <item name="android:drawableRight">@mipmap/ic_has_next</item>
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:textColorHint">@color/text_color_999999</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:hint">请选择</item>
    </style>


    <!-- 基础信息ItemTextViewStyle no right drawable-->
    <style name="BasicInfoItemTextViewNoRightDrawableStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawablePadding">@dimen/dp_8</item>
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:textColorHint">@color/text_color_999999</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:gravity">right</item>
        <item name="android:hint">请选择</item>
    </style>

    <!-- 基础信息ItemTextViewStyle view rotate-->
    <style name="BasicInfoItemTextViewRotateStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawablePadding">@dimen/dp_8</item>
        <item name="android:drawableRight">@mipmap/ic_has_next</item>
    </style>


    <!-- 加载Dialog样式 -->
    <style name="loadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否显示title -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置dialog的背景色 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 背景是否模糊显示 -->
    </style>


    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="ios_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/iosbg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--签名界面——text提示框style-->
    <style name="actionActivity.autographTextStyle">
        <item name="android:textColor">@color/text2</item>
        <item name="android:layout_height">@dimen/item_height_dp_52</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_21</item>
        <item name="android:gravity">center</item>
    </style>
    <!--签名界面——签名框style-->
    <style name="actionActivity.actionStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_marginLeft">@dimen/dp_16</item>
        <item name="android:layout_marginTop">@dimen/dp_6</item>
        <item name="android:layout_marginBottom">@dimen/dp_6</item>
        <item name="android:background">@drawable/ios_btn</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="actionActivity.layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_marginTop">@dimen/dp_2</item>
        <item name="android:layout_marginLeft">@dimen/dp_6</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="actionActivity.viewLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dc_e5e5e5</item>
    </style>

    <style name="actionActivity.imgEmpty">
        <item name="android:layout_width">@dimen/dp_32</item>
        <item name="android:layout_height">@dimen/dp_32</item>
        <item name="android:layout_gravity">top|left</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/dp_2</item>
        <item name="android:background">@drawable/control_btn_bg</item>
    </style>

    <style name="autographTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:textSize">@dimen/text_size_21</item>
        <item name="android:layout_marginTop">@dimen/dp_6</item>
        <item name="android:layout_marginBottom">@dimen/dp_6</item>
        <item name="android:drawableRight">@mipmap/ic_has_next</item>
    </style>

    <style name="noiseBottomStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/btn_height_dp_52</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_21</item>
    </style>

    <style name="noiseBottomTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/dp_6</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#2F9AFF</item>
    </style>

    <style name="MyDrawableLinearLayoutItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height_dp_56</item>

    </style>
</resources>
