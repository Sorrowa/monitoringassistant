<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="@dimen/btn_height_dp_52"
    android:background="@color/bg_color_ffffff"
    android:orientation="vertical">

    <include layout="@layout/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height_dp_52"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_color_999999"
            android:textSize="@dimen/text_size_13" />

        <View
            android:layout_width="@dimen/division_line"
            android:layout_height="match_parent"
            android:background="@color/dc_e5e5e5" />

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height_dp_52"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/text_color_2b99ff"
            android:textSize="@dimen/text_size_13" />

    </LinearLayout>


</LinearLayout>