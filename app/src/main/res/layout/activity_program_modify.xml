<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <RelativeLayout
        style="@style/BasicInfoItemStyle"
        android:layout_marginTop="@dimen/dp_4">

        <TextView
            style="@style/BasicInfoItemNameStyle"
            android:text="要素" />

        <TextView
            android:id="@+id/tv_tag"
            style="@style/BasicInfoItemTextViewStyle" />

    </RelativeLayout>

    <include layout="@layout/view_line_basic_info" />

    <RelativeLayout style="@style/BasicInfoItemStyle">

        <TextView
            style="@style/BasicInfoItemNameStyle"
            android:text="采样点位" />

        <TextView
            android:id="@+id/tv_point"
            style="@style/BasicInfoItemTextViewStyle"
            android:layout_marginLeft="100dp"
            android:ellipsize="end"
            android:maxLines="2" />

    </RelativeLayout>

    <include layout="@layout/view_line_basic_info" />

    <RelativeLayout style="@style/BasicInfoItemStyle">

        <TextView
            style="@style/BasicInfoItemNameStyle"
            android:text="监测项目" />

        <TextView
            android:id="@+id/tv_monitem"
            style="@style/BasicInfoItemTextViewStyle"
            android:layout_marginLeft="100dp"
            android:ellipsize="end"
            android:maxLines="2" />

    </RelativeLayout>

    <include layout="@layout/view_line_basic_info" />

    <RelativeLayout style="@style/BasicInfoItemStyle">

        <TextView
            style="@style/BasicInfoItemNameStyle"
            android:text="监测天数" />

        <EditText
            android:id="@+id/et_days"
            style="@style/BasicInfoItemEditTextStyle"
            android:inputType="number" />

    </RelativeLayout>

    <include layout="@layout/view_line_basic_info" />

    <RelativeLayout style="@style/BasicInfoItemStyle">

        <TextView
            style="@style/BasicInfoItemNameStyle"
            android:text="监测频次" />

        <EditText
            android:id="@+id/et_period"
            style="@style/BasicInfoItemEditTextStyle"
            android:inputType="number" />

    </RelativeLayout>

    <include layout="@layout/view_line_basic_info" />

    <RelativeLayout style="@style/BasicInfoItemStyle">

        <TextView
            style="@style/BasicInfoItemNameStyle"
            android:text="备注" />

        <EditText
            android:id="@+id/et_comment"
            style="@style/BasicInfoItemEditTextStyle" />

    </RelativeLayout>

    <include layout="@layout/view_line_basic_info" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include layout="@layout/view_add_sampling" />

</LinearLayout>


