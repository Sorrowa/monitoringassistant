<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color_f8f8f8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/item_height_dp_42"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_16"
            android:text="完结说明"
            android:textColor="@color/text_color_333333"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16"
            android:src="@mipmap/ic_dialog_close"
            android:visibility="gone" />

    </LinearLayout>

    <include layout="@layout/view_line" />

    <EditText
        android:id="@+id/et_comment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dp_16"
        android:layout_weight="1"
        android:gravity="top"
        android:padding="@dimen/dp_8"
        android:background="@drawable/shape_task"
        android:hint="请输入完结说明" />

    <include layout="@layout/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height_dp_52"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_color_999999"
            android:textSize="@dimen/text_size_13" />

        <View
            android:layout_width="@dimen/division_line"
            android:layout_height="match_parent"
            android:background="@color/dc_e5e5e5" />

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height_dp_52"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/text_color_2b99ff"
            android:textSize="@dimen/text_size_13" />

    </LinearLayout>


</LinearLayout>