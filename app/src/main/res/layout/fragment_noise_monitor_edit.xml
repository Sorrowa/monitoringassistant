<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_dp_52"
                android:background="#F5F5F5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:drawableRight="@mipmap/ic_has_next"
                    android:drawablePadding="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:text="监测数据"
                    android:textColor="#303030"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:text="编辑"
                    android:textColor="#676767"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <include layout="@layout/view_line" />

            <LinearLayout
                style="@style/BasicInfoItemStyle"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/BasicInfoItemNameStyle"
                    android:text="测点位置" />

                <TextView
                    android:id="@+id/text_monitor_address"
                    style="@style/BasicInfoItemTextViewStyle"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_weight="1" />
            </LinearLayout>

            <include layout="@layout/view_line" />

            <TextView
                android:id="@+id/text_is_open"
                style="@style/BasicInfoItemStyle"
                android:drawableRight="@drawable/selector_btn_open"
                android:gravity="center|start"
                android:text="等效声级测量值"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_14" />

            <include layout="@layout/view_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    style="@style/BasicInfoItemStyle"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BasicInfoItemNameStyle"
                        android:text="监测时段" />

                    <TextView
                        android:id="@+id/tv_monitor_date"
                        style="@style/BasicInfoItemTextViewStyle"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1" />
                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    style="@style/BasicInfoItemStyle"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BasicInfoItemNameStyle"
                        android:text="监测时间" />

                    <TextView
                        android:id="@+id/tv_monitor_time_first"
                        style="@style/BasicInfoItemTextViewStyle"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1" />
                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    style="@style/BasicInfoItemStyle"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BasicInfoItemNameStyle"
                        android:text="测量值" />

                    <EditText
                        android:id="@+id/edit_monitor_data"
                        style="@style/BasicInfoItemEditTextStyle"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1"
                        android:inputType="number" />
                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    style="@style/BasicInfoItemStyle"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BasicInfoItemNameStyle"
                        android:text="监测时间" />

                    <TextView
                        android:id="@+id/tv_monitor_time"
                        style="@style/BasicInfoItemTextViewStyle"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1" />
                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    style="@style/BasicInfoItemStyle"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BasicInfoItemNameStyle"
                        android:text="背景值" />

                    <EditText
                        android:id="@+id/edit_monitor_bg_data"
                        style="@style/BasicInfoItemEditTextStyle"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1"
                        android:inputType="number" />
                </LinearLayout>

                <include layout="@layout/view_line" />

                <LinearLayout
                    style="@style/BasicInfoItemStyle"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BasicInfoItemNameStyle"
                        android:text="修正值" />

                    <EditText
                        android:id="@+id/edit_monitor_edit_data"
                        style="@style/BasicInfoItemEditTextStyle"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1"
                        android:inputType="number" />
                </LinearLayout>

                <include layout="@layout/view_line" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/view_line" />

    <include layout="@layout/item_noise_bottom_save_or_delete" />
</LinearLayout>