<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="采样日期" />

            <TextView
                android:id="@+id/tv_sampling_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="2018-09-30"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_13" />

        </RelativeLayout>

        <include layout="@layout/view_line_basic_info" />

        <RelativeLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="采样人" />

            <TextView
                android:id="@+id/tv_sampling_user"
                style="@style/BasicInfoItemTextViewStyle"
                android:ellipsize="end"
                android:maxLines="1" />

        </RelativeLayout>

        <include layout="@layout/view_line_basic_info" />

        <RelativeLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="降水类型"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tv_sampling_type"
                style="@style/BasicInfoItemTextViewStyle" />

        </RelativeLayout>

        <include layout="@layout/view_line_basic_info" />

        <RelativeLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="采样点位"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tv_sampling_point"
                style="@style/BasicInfoItemTextViewStyle" />

        </RelativeLayout>

        <include layout="@layout/view_line_basic_info" />

        <RelativeLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="点位编号" />

            <EditText
                android:id="@+id/tv_sampling_no"
                style="@style/BasicInfoItemEditTextStyle"
                android:inputType="number"
                android:maxLength="50" />

        </RelativeLayout>

        <include layout="@layout/view_line_basic_info" />

        <RelativeLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="采样高度" />

            <EditText
                android:id="@+id/tv_sampling_height"
                style="@style/BasicInfoItemEditTextStyle"
                android:inputType="numberDecimal"
                android:maxLength="50" />

        </RelativeLayout>

        <include layout="@layout/view_line_basic_info" />

        <RelativeLayout style="@style/BasicInfoItemStyle">

            <TextView

                style="@style/BasicInfoItemNameStyle"
                android:text="采样器接雨面积（㎡）" />

            <EditText
                android:id="@+id/et_sampling_area"
                style="@style/BasicInfoItemEditTextStyle"
                android:inputType="numberDecimal" />

        </RelativeLayout>

        <include layout="@layout/view_line_basic_info" />

        <RelativeLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="采样方法" />

            <TextView
                android:id="@+id/tv_sampling_method"
                style="@style/BasicInfoItemTextViewStyle" />

        </RelativeLayout>

        <include layout="@layout/view_line_basic_info" />

        <RelativeLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="监测仪器名称、型号及编号（溯源信息）" />

            <TextView
                android:id="@+id/tv_sampling_device"
                style="@style/BasicInfoItemTextViewStyle" />

        </RelativeLayout>

        <include layout="@layout/view_flow_information" />

        <include layout="@layout/view_line_basic_info" />

        <RelativeLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="备注" />

            <EditText
                android:id="@+id/tv_comment"
                style="@style/BasicInfoItemEditTextStyle"
                android:maxLength="100" />

        </RelativeLayout>

        <include layout="@layout/view_add_photo" />

    </LinearLayout>

</ScrollView>
