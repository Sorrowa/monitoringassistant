<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="采样日期"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_sampling_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="2018-09-30"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_13" />

        </LinearLayout>

        <include layout="@layout/view_line_basic_info" />

        <LinearLayout
            android:orientation="horizontal"
            style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="采样人" />

            <TextView
                android:id="@+id/tv_sampling_user"
                style="@style/BasicInfoItemTextViewStyle_gai"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center|end"/>

        </LinearLayout>

        <include layout="@layout/view_line_basic_info" />

        <LinearLayout
            android:orientation="horizontal"
            style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="降水类型"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tv_sampling_type"
                style="@style/BasicInfoItemTextViewStyle_gai" />

        </LinearLayout>

        <include layout="@layout/view_line_basic_info" />

        <LinearLayout
            android:orientation="horizontal"
            style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="采样点位"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tv_sampling_point"
                style="@style/BasicInfoItemTextViewStyle_gai" />

        </LinearLayout>

        <include layout="@layout/view_line_basic_info" />

        <LinearLayout
            android:orientation="horizontal"
            style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="点位编号" />

            <EditText
                android:id="@+id/tv_sampling_no"
                style="@style/BasicInfoItemEditTextStyle_gai"
                android:inputType="number"
                android:maxLength="50" />

        </LinearLayout>

        <include layout="@layout/view_line_basic_info" />

        <LinearLayout
            android:orientation="horizontal"
            style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="采样高度" />

            <EditText
                android:id="@+id/tv_sampling_height"
                style="@style/BasicInfoItemEditTextStyle_gai"
                android:inputType="numberDecimal"
                android:maxLength="50" />

        </LinearLayout>

        <include layout="@layout/view_line_basic_info" />

        <LinearLayout
            android:orientation="horizontal"
            style="@style/BasicInfoItemStyle">

            <TextView

                style="@style/BasicInfoItemNameStyle"
                android:text="采样器接雨面积（c㎡）" />

            <EditText
                android:id="@+id/et_sampling_area"
                style="@style/BasicInfoItemEditTextStyle_gai"
                android:inputType="numberDecimal" />

        </LinearLayout>

        <include layout="@layout/view_line_basic_info" />

        <LinearLayout
            android:orientation="horizontal"
            style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="采样方法" />

            <TextView
                android:id="@+id/tv_sampling_method"
                style="@style/BasicInfoItemTextViewStyle_gai" />

        </LinearLayout>

        <include layout="@layout/view_line_basic_info" />

        <LinearLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="监测仪器名称、型号及编号（溯源信息）" />

            <TextView
                android:id="@+id/tv_sampling_device"
                style="@style/BasicInfoItemTextViewStyle_gai" />

        </LinearLayout>

        <include layout="@layout/view_flow_information" />

        <include layout="@layout/view_line_basic_info" />

        <LinearLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="备注" />

            <EditText
                android:id="@+id/tv_comment"
                style="@style/BasicInfoItemEditTextStyle_gai"
                android:maxLength="100" />

        </LinearLayout>

        <include layout="@layout/view_line_basic_info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_add_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:src="@mipmap/ic_add_photo"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8" />

        </LinearLayout>

        <include layout="@layout/view_line_basic_info" />

    </LinearLayout>

</ScrollView>
