<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="采样单编号" />

            <TextView
                android:id="@+id/base_sample_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="#333333"
                android:textSize="@dimen/text_size_13" />

        </RelativeLayout>

        <include layout="@layout/view_line_basic_info" />
        <RelativeLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="监测目的" />

            <TextView
                android:id="@+id/base_sample_md"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="#333333"
                android:textSize="@dimen/text_size_13" />

        </RelativeLayout>

        <include layout="@layout/view_line_basic_info" />
        <RelativeLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="监测性质" />

            <TextView
                android:id="@+id/base_sample_xz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="#333333"
                android:textSize="@dimen/text_size_13" />

        </RelativeLayout>

        <include layout="@layout/view_line_basic_info" />





        <RelativeLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="采样日期" />

            <TextView
                android:id="@+id/base_sample_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="#333333"
                android:textSize="@dimen/text_size_13" />

        </RelativeLayout>

        <include layout="@layout/view_line_basic_info" />

        <RelativeLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="采样人" />


            <TextView
                android:id="@+id/base_sample_user"
                style="@style/BasicInfoItemTextViewStyle"
                android:ellipsize="end"
                android:maxLines="1" />

        </RelativeLayout>

        <include layout="@layout/view_line_basic_info" />

        <RelativeLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="样品性质"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/base_sample_property"
                style="@style/BasicInfoItemTextViewStyle" />

        </RelativeLayout>

        <include layout="@layout/view_line_basic_info" />

        <RelativeLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="采样点位"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/base_sample_point"
                style="@style/BasicInfoItemTextViewStyle" />

        </RelativeLayout>

        <include layout="@layout/view_line_basic_info" />

        <RelativeLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="采样方法" />

            <TextView
                android:id="@+id/base_sample_method"
                style="@style/BasicInfoItemTextViewStyle" />

        </RelativeLayout>

        <include layout="@layout/view_line_basic_info" />

        <RelativeLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="是否进入污水处理" />

            <CheckedTextView
                android:id="@+id/base_sample_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_switch_button"
                android:checked="false" />

        </RelativeLayout>

        <!--<include layout="@layout/view_water_information" />-->

        <include layout="@layout/view_weather_information" />

        <include layout="@layout/view_more_information" />

        <include layout="@layout/view_flow_information" />

        <include layout="@layout/view_line_basic_info" />

        <RelativeLayout style="@style/BasicInfoItemStyle">

            <TextView
                style="@style/BasicInfoItemNameStyle"
                android:text="备注" />

            <EditText
                android:id="@+id/base_sample_comment"
                style="@style/BasicInfoItemEditTextStyle"
                android:maxLength="100" />

        </RelativeLayout>

        <include layout="@layout/view_add_photo" />


    </LinearLayout>

</ScrollView>
