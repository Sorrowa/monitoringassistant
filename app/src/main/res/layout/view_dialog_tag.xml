<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_close"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_dp_42"
        android:background="@color/bg_color_f8f8f8"
        android:drawableRight="@mipmap/ic_dialog_close"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_12"
        android:text="要素"
        android:textColor="@color/text_color_333333"
        android:textSize="@dimen/text_size_14" />

    <include layout="@layout/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <cn.cdjzxy.monitoringassistant.widgets.CustomTab
            android:id="@+id/tabview"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_4" />

        <View
            android:layout_width="@dimen/division_line"
            android:layout_height="match_parent"
            android:background="@color/dc_c1c1c1" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_4" />

    </LinearLayout>


</LinearLayout>